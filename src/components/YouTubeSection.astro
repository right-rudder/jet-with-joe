---
import { YouTube } from "astro-embed";

const videos = [
  {
    id: "Pr0TinClCro", // YouTube video ID
    title: "Accelerated Flight Training Explained",
    description: "Learn how Jet with Joe accelerates your path to the skies with flexible, independent CFI training.",
  },
  {
    id: "Pr0TinClCro",
    title: "Flying Cross-Country with Jet with Joe",
    description: "Experience cross-country flights and build real-world skills with our independent CFIs.",
  },
  {
    id: "Pr0TinClCro",
    title: "Zero to Hero Program Overview",
    description: "Discover how you can go from Zero to CFII in under 6 months with Jet with Joe.",
  },
];
---

<section class="py-16 lg:py-24 bg-cod-gray-100">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Heading and Description -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-5xl font-bold text-primary-700 mb-4">
        Jet with Joe YouTube Channel
      </h2>
      <p class="text-lg text-accent-800 max-w-4xl mx-auto">
        Explore our latest flight training videos, tutorials, and student journeys.
      </p>
    </div>

    <!-- Video Alternating Flex Layout -->
    <div class="flex flex-col gap-12">
      {videos.map((video, index) => (
        <section
          id={video.title}
          class="bg-gray-900 pb-4 md:py-12 lg:py-0"
        >
          <div class={`mx-auto flex items-center justify-center gap-9 md:gap-12 flex-wrap max-w-7xl ${index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"}`}>
            <!-- Text Content -->
            <div class="w-full md:w-1/3 pt-16 md:py-0 px-2 md:px-0">
              <h2
                class={`mt-2 text-4xl font-bold tracking-tight leading-tighter text-gray-100 lg:text-5xl text-center px-3 md:px-0 ${
                  index % 2 === 0 ? "md:text-left" : "md:text-right"
                }`}
              >
                {video.title}
              </h2>
              <p
                class={`text-gray-400 mt-4 text-base px-3 md:px-0 text-center ${
                  index % 2 === 0 ? "md:text-left" : "md:text-right"
                }`}
              >
                {video.description}
              </p>
            </div>

            <!-- Video Embed -->
            <div class="w-full md:w-1/2 flex justify-center aspect-square lg:aspect-auto">
              <YouTube
                id={video.id}
                class="w-full h-auto"
                params="start=0"
                posterQuality="max"
              />
            </div>
          </div>
        </section>
      ))}
    </div>
  </div>
</section>
