---
import content from "../data/featuresInfo.js";
import { GiCommercialAirplane } from "react-icons/gi";

const { title, description, features } = content;
---

<section class="py-16 lg:py-24 bg-primary-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Heading and Description -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-5xl font-bold text-accent-400 mb-4">
        {title}
      </h2>
      <p class="text-lg text-cod-gray-100 max-w-4xl mx-auto">{description}</p>
    </div>

    <!-- Feature Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div class="text-center p-6 bg-gray-800 shadow-lg rounded-xl flex flex-col items-center justify-between transform hover:scale-105 transition duration-300" data-aos="fade-up" data-aos-delay={index * 200}>
          <div class="text-cranberry-500 text-5xl mb-4">
            <GiCommercialAirplane />
          </div>
          <div>
            <h3 class="text-2xl font-semibold text-white mb-2">{feature.title}</h3>
            <p class="text-gray-300 mb-4">{feature.description}</p>
          </div>
          <a href={feature.link} class="text-accent-300 font-semibold hover:underline">
            {feature.linkText} â†’
          </a>
        </div>
      ))}
    </div>
  </div>
</section>