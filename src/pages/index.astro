<IndexLayout siteTitle="Home" siteDescription="Welcome to my personal website!">
	<HomeHeader />
  <FlightSchoolFeatures />
  <FlightTrainingSection />
  <Welcome content={heroContent} />
  <FlightTrainingAdvantages />



  <YouTubeSection />
