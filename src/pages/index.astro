---
import IndexLayout from "../layouts/IndexLayout.astro";
import HomeHeader from "../components/HomeHeader.astro";
import FlightSchoolFeatures from "../components/FlightSchoolFeatures.astro";
import FlightTrainingSection from "../components/FlightTrainingSection.astro";
import YouTubeSection from "../components/YouTubeSection.astro";
import Welcome from "../components/Welcome.astro";
import FlightTrainingAdvantages from "../components/FlightTrainingAdvantages.astro";
import { GeneralFAQs } from "../data/general-faqs";
import FAQs from "../components/FAQs";
import FAQSchema from "../components/FAQSchema.astro";

const siteTitle = "Jet with Joe | Accelerated Flight Training with Independent CFIs";
const siteDescription = "Jet with Joe offers accelerated flight training with independent CFIs across multiple U.S. locations. Train on your schedule, fly anywhere, and get certified faster with our flexible, affordable programs. Financing available through Stratus Financial.";
const heroContent = {
  title: "Accelerated. Flexible. Independent.",
  paragraphs: [
    "At Jet with Joe, we redefine flight training by offering a fully independent, accelerated path to your pilot's license. Train with experienced CFIs who work exclusively with 1–3 students, ensuring personalized attention and flexible scheduling.",
    "Our programs are designed to get you certified faster—whether you're starting from zero or building on existing experience. With locations in Akron, Fort Myers, and more, you can train where you want, when you want.",
    "Skip the long wait times and crowded schedules. With Jet with Joe, you're not just learning to fly—you’re preparing for a career in aviation, on your terms."
  ],
  imagePath: "/src/assets/stock-tadeu-jnr-kAzSa_azENM-unsplash.jpg",
  imageAlt: "Jet with Joe aircraft during flight training. Accelerated, independent flight instruction in Akron, Fort Myers, and more.",
  buttons: [
    {
      text: "Explore Programs",
      link: "/programs",
    },
  ],
};
const faqSchemaItems = GeneralFAQs.map((faq) => ({
  question: faq.title,
  // Remove HTML tags for clean schema
  answer: faq.content.replace(/<[^>]*>?/gm, ""),
}));
---

<IndexLayout siteTitle={siteTitle} siteDescription={siteDescription}>
	<HomeHeader />
  <FlightSchoolFeatures />
  <FlightTrainingSection />
  <Welcome content={heroContent} />
  <FlightTrainingAdvantages />
  <YouTubeSection />
  <FAQs faqs={GeneralFAQs} type="General" client:visible />
  <FAQSchema items={faqSchemaItems} />
</IndexLayout>
